#!/usr/bin/env bash
set -e

if [[ -n $OMNIA_DEBUG ]]; then
	env | sort
	set -x
fi

cd "$(cd "${0%/*/*}" && pwd)/lib"
. ./config.sh
. ./gasprice.sh
. ./ethereum.sh
. ./log.sh
. ./source.sh
. ./status.sh
. ./util.sh
. ./transport.sh
. ./feed.sh
. ./relayer.sh
. ./omnia.sh

initEnv
if [[ "$OMNIA_MODE" == "RELAYER" || "$OMNIA_MODE" == "RELAY" ]]; then
	runRelayer
elif [[ "$OMNIA_MODE" == "FEED" ]]; then
	runFeed
else
	error "Unrecognised OMNIA_MODE"
fi